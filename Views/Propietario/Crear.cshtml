@model ProyectoInmobiliaria.Models.Propietario

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">Crear Nuevo Propietario</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Crear" method="post">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Apellido" class="form-label fw-bold"></label>
                            <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido" />
                            <span asp-validation-for="Apellido" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Dni" class="form-label fw-bold"></label>
                            <input asp-for="Dni" class="form-control" placeholder="Ingrese el DNI" />
                            <span asp-validation-for="Dni" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="ejemplo@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label fw-bold"></label>
                            <input asp-for="Telefono" class="form-control" placeholder="Ingrese el telÃ©fono" />
                            <span asp-validation-for="Telefono" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
