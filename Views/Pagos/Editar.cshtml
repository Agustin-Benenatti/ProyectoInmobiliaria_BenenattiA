@model ProyectoInmobiliaria.Models.PagosModels
@{
    ViewData["Title"] = "Editar Pago";
}

<h2>Editar Pago</h2>

<form asp-action="Editar" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="IdPago" />
    <input type="hidden" asp-for="IdContrato" />

    <div class="form-group">
        <label asp-for="Detalle"></label>
        <input asp-for="Detalle" class="form-control" />
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-controller="Pagos" asp-action="Index" asp-route-contratoId="@Model.IdContrato" class="btn btn-secondary ms-2">
        Volver
    </a>
</form>
