@model ProyectoInmobiliaria.Models.PagosModels
@{
    ViewData["Title"] = "Anular Pago";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Anulación</h3>
        </div>
        <div class="card-body">
            <p class="lead">¿Seguro que deseas anular este pago?</p>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Número de Pago:</dt>
                <dd class="col-sm-9">@Model.NroPago</dd>

                <dt class="col-sm-3 font-weight-bold">Fecha:</dt>
                <dd class="col-sm-9">@Model.FechaPago.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 font-weight-bold">Monto:</dt>
                <dd class="col-sm-9">@Model.Monto.ToString("C")</dd>

                <dt class="col-sm-3 font-weight-bold">Detalle:</dt>
                <dd class="col-sm-9">@Model.Detalle</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="AnularConfirmado" method="post">
                <input type="hidden" name="id" value="@Model.IdPago" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-check-circle-fill"></i> Sí, anular
                </button>
            </form>
            <a asp-action="Index" asp-route-contratoId="@Model.IdContrato" class="btn btn-secondary btn-lg">
                <i class="bi bi-x-circle-fill"></i> Cancelar
            </a>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
