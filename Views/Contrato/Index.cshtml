@model IEnumerable<ProyectoInmobiliaria.Models.Contrato>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Lista de Contratos</h2>
        <a asp-action="Crear" class="btn btn-success">
            Nuevo Contrato
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Precio</th>
                <th>Estado</th>
                <th>Inquilino</th>
                <th>Direcci√≥n Inmueble</th>
                <th>Propietario</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@c.FechaFin.ToString("dd/MM/yyyy")</td>
                <td>@c.Precio.ToString("C")</td>
                <td>@c.Estado</td>
                <td>@c.Inquilino?.Nombre @c.Inquilino?.Apellido</td>
                <td>@c.Inmueble?.Direccion</td>
                <td>@c.Inmueble?.Propietario?.Nombre @c.Inmueble?.Propietario?.Apellido</td>
                <td class="text-center">
                    <a asp-action="Detalle" asp-route-id="@c.IdContrato" class="btn btn-sm btn-info text-white me-1">
                        Ver
                    </a>
                    <a asp-action="Editar" asp-route-id="@c.IdContrato" class="btn btn-sm btn-warning text-dark me-1">
                        Editar
                    </a>
                    <a asp-action="Eliminar" asp-route-id="@c.IdContrato" class="btn btn-sm btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
