@model ProyectoInmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Renovar Contrato";
}

<h2>Renovar Contrato</h2>

<form asp-action="Renovar" method="post">
    <input type="hidden" asp-for="InquilinoId" />
    <input type="hidden" asp-for="IdInmueble" />

    <div class="mb-3">
        <label class="form-label">Inquilino</label>
        <input class="form-control" value="@Model.Inquilino?.Nombre @Model.Inquilino?.Apellido" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Propietario</label>
        <input class="form-control" value="@Model.Inmueble?.Propietario?.Nombre @Model.Inmueble?.Propietario?.Apellido" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Inmueble</label>
        <input class="form-control" value="@Model.Inmueble?.Direccion" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="FechaInicio" class="form-label"></label>
        <input asp-for="FechaInicio" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="FechaFin" class="form-label"></label>
        <input asp-for="FechaFin" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Confirmar Renovaci√≥n</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
