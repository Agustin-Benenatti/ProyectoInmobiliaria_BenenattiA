@model IEnumerable<ProyectoInmobiliaria.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <h2>Usuarios</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Rol</th>
                <th>Avatar</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Email</td>
                    <td>@u.Nombre</td>
                    <td>@u.Apellido</td>
                    <td>@u.Rol</td>
                    <td>
                        <img src="@u.Avatar" alt="avatar" width="40" height="40" class="rounded-circle" />
                    </td>
                    <td>
                        <a asp-action="EditarPerfil" asp-route-id="@u.IdUsuario" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@u.IdUsuario" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
