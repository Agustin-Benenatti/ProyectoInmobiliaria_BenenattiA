@model IEnumerable<ProyectoInmobiliaria.Models.Contrato>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Lista de Contratos</h2>
        <a asp-action="Crear" class="btn btn-success">
            Nuevo Contrato
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered shadow-sm rounded text-center" style="table-layout: auto; width: 100%;">
        <thead class="table-dark">
            <tr>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Precio</th>
                <th>Estado</th>
                <th>Inquilino</th>
                <th>Direcci√≥n Inmueble</th>
                <th>Propietario</th>
                <th style="min-width: 420px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@c.FechaFin.ToString("dd/MM/yyyy")</td>
                <td>@c.Precio.ToString("C0")</td>
                <td>@c.Estado</td>
                <td>@c.Inquilino?.Nombre @c.Inquilino?.Apellido</td>
                <td>@c.Inmueble?.Direccion</td>
                <td>@c.Inmueble?.Propietario?.Nombre @c.Inmueble?.Propietario?.Apellido</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Detalle" asp-route-id="@c.IdContrato" 
                           class="btn btn-sm btn-info text-white">
                            Ver
                        </a>
                        <a asp-action="Editar" asp-route-id="@c.IdContrato" 
                           class="btn btn-sm btn-warning text-dark">
                            Editar
                        </a>
                        <a asp-action="Eliminar" asp-route-id="@c.IdContrato" 
                           class="btn btn-sm btn-danger">
                            Eliminar
                        </a>
                        <a asp-controller="Pagos" asp-action="Crear" asp-route-contratoId="@c.IdContrato" 
                           class="btn btn-sm btn-success">
                            Registrar Pago
                        </a>
                        <a asp-action="TerminarAnticipado" asp-route-id="@c.IdContrato" 
                           class="btn btn-sm btn-danger">
                            Terminar Anticipadamente
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
