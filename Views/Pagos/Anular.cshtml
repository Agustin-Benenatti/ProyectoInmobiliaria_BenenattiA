@model ProyectoInmobiliaria.Models.PagosModels
@{
    ViewData["Title"] = "Anular Pago";
}

<h2>¿Seguro que deseas anular este pago?</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nro Pago</dt>
        <dd class="col-sm-10">@Model.NroPago</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.FechaPago</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.Monto.ToString("C")</dd>

        <dt class="col-sm-2">Detalle</dt>
        <dd class="col-sm-10">@Model.Detalle</dd>
    </dl>
</div>

<form asp-action="AnularConfirmado" method="post">
    <input type="hidden" asp-for="IdPago" />
    <button type="submit" class="btn btn-danger">Sí, anular</button>
    <a asp-action="Index" asp-route-idContrato="@Model.IdContrato" class="btn btn-secondary">Cancelar</a>
</form>
