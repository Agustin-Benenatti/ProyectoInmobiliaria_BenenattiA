@model ProyectoInmobiliaria.Models.Contrato

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">Crear Nuevo Contrato</h3>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Crear" method="post" id="formContrato">
                        <div class="mb-3">
                            <label asp-for="FechaInicio" class="form-label fw-bold"></label>
                            <input asp-for="FechaInicio" type="date" class="form-control" id="fechaInicio" />
                            <span asp-validation-for="FechaInicio" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaFin" class="form-label fw-bold"></label>
                            <input asp-for="FechaFin" type="date" class="form-control" id="fechaFin" readonly />
                            <span asp-validation-for="FechaFin" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Precio" class="form-label fw-bold"></label>
                            <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="Ingrese el precio" />
                            <span asp-validation-for="Precio" class="text-danger small"></span>
                        </div>

                        <!-- Estado oculto siempre = Activo -->
                        <input type="hidden" asp-for="Estado" value="Activo" />

                        <div class="mb-3">
                            <label asp-for="InquilinoId" class="form-label fw-bold">Inquilino</label>
                            <select asp-for="InquilinoId" class="form-select" asp-items="ViewBag.Inquilinos">
                                <option value="">Seleccione un inquilino</option>
                            </select>
                            <span asp-validation-for="InquilinoId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdInmueble" class="form-label fw-bold">Inmueble</label>
                            <select asp-for="IdInmueble" class="form-select" asp-items="ViewBag.Inmuebles">
                                <option value="">Seleccione un inmueble</option>
                            </select>
                            <span asp-validation-for="IdInmueble" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Error -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="errorModalLabel">Error al crear contrato</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let fechaInicio = document.getElementById("fechaInicio");
            let fechaFin = document.getElementById("fechaFin");

            let hoy = new Date();
            let haceUnMes = new Date();
            haceUnMes.setMonth(hoy.getMonth() - 1);

            // Función para formatear YYYY-MM-DD
            const formatDate = (date) => date.toISOString().split('T')[0];

            // Valor inicial = hoy (fecha de la PC)
            fechaInicio.value = formatDate(hoy);

            // Permitir un mes atrás como mínimo
            fechaInicio.min = formatDate(haceUnMes);

            // Sin límite máximo → se puede elegir futuro
            fechaInicio.removeAttribute("max");

            // Inicializar fecha fin automáticamente (6 meses después)
            const actualizarFechaFin = () => {
                let inicio = new Date(fechaInicio.value);
                if (!isNaN(inicio)) {
                    let fin = new Date(inicio);
                    fin.setMonth(fin.getMonth() + 6);
                    fechaFin.value = formatDate(fin);
                }
            };

            actualizarFechaFin();

            
            fechaInicio.addEventListener("change", actualizarFechaFin);

            
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <text>
                    var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                    errorModal.show();
                </text>
            }
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
